<%- include('header'); -%>
	<div class="container">
		<div class="row">
			<div class="col-sm-12">

				<div class="card" style="width: 18rem;">
					<div class="card-body">
						<h1 class="card-title">
							<% if(editing){ %>Modifier<% } else { %>Ajouter<% } %>
						</h1>

						<form method="POST" action="/<% if(editing){ %>edit-anime<% } else { %>add-anime<% } %>">
							<div class="mb-3">
								<label class="form-label">Nom</label>
								<input class="form-control" type="text" name="name"
									value="<% if(editing){ %><%= anime.name %><% } %>" required />
							</div>
							<div class="mb-3">
								<label class="form-label">Image</label>
								<input class="form-control" type="text" name="image"
									value="<% if(editing){ %><%= anime.image %><% } %>" required />
							</div>
							<div class="mb-3">
								<label class="form-label">Description</label>
								<textarea class="form-control" type="text" name="description" rows="10" cols="50"
									required><% if(editing){ %><%= anime.description %><% } %></textarea>
							</div>
							<% if(editing){ %>
								<div>
									<input type="hidden" name="animeId" value="<%= anime.id %>" />
								</div>
								<% } %>
									<div>
										<button class="btn btn-primary" type="submit">
											<% if(editing){ %>Modifier<% } else { %>Ajouter<% } %>
										</button>
									</div>
						</form>
					</div>
				</div>

			</div>
		</div>
	</div>

	<%- include('footer'); -%>
		</body>

		</html>